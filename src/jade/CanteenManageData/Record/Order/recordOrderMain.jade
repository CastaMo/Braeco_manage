#record-order-main
    .ro-container-header
        .date-input-header 日期区间
        .input-field
            .datepicker-field.start-datepicker-field
                input.start-date(data-toggle="datepicker")
                span.datepicker-icon
            p 至
            .datepicker-field.end-datepicker-field
                input.end-date(data-toggle="datepicker")
                span.datepicker-icon
            button.search-btn
                icon.search-icon
            select.type-filter
                option(value="all") 所有订单
                option(value="eatin") 堂食
                option(value="takeout") 外带
                option(value="membership") 会员卡充值
            form(id="export-form" action="/Dinner/Manage/Orders/Excel" method="POST" target="_blank")
                input(id="export-form-class" name="class" type='number' value="1" style="display:none")
                input(id="export-form-st" name="st" type='number' value="0" style="display:none")
                input(id="export-form-en" name="en" type='number' value="0" style="display:none")
                input(id="export-form-type" name="type" type='text' value="all" style="display:none")
                input.export-btn(type="submit" value="导出")
            .clear
    table.ro-container-table
        thead
            tr
                th.rot-pay-time 成交时间
                th.rot-number 会员编号
                th.rot-order-number 订单号
                th.rot-water-number 流水号
                th.rot-pay-count 交易额
                th.rot-order-type 订单类型
                th.rot-pay-method 支付方式
                th.rot-method 操作
        tbody
    .ro-container-paginate
        a.pre-page-url(href='#')
            icon.prev-page-icon
        p.current-page
        p /
        p.total-page
        a.next-page-url(href='#')
            icon.next-page-icon
        input.target-page-input(type='number')
        button.jump-btn 跳转
        .clear
