#full-cover
	.full-cover-wrapper
		.full-cover-container
			.popup.modify-field.total-center.hide
				.title-field
					.title-wrapper.parallel-container
						p.title 修改积分
						.close-field
							.close-btn
						.clear
					.content-field
						.content-wrapper.parallel-container
							.integral-field
								p 目前积分：
							.modifyIntegral
							.level-field
								p 积分修改为
								input#_input1(maxlength = "7")
						.clear
						.preview-field
							.preview-wrapper.parallel-container
								p.displayID
								span._txt1 微信昵称：
								p.WechatName
								span._txt2 电话号码：
								p.phoneNumber
								span._txt3 会员编号：
								p.memberID
								span._txt4 目前余额：
								p.parent
					.btn-field
						.btn-wrapper
							.btn-container
								.cancel-btn.btn
									p 取消
								.confirm-btn.btn
									p 确定
								.clear
			.popup.recharge-field.total-center.hide
				.title-field
					.title-wrapper.parallel-container
						p.title 充值
						.close-field
							.close-btn
						.clear
					.content-field(style='height:275px;')
						.content-wrapper.parallel-container(style='height:115px;')
							.internal-charge
								span.checkbox
								span.description 内部充值（充值余额不计入流水）
							.parentMoney-field(style='width:95px')
								p 目前余额：
							.modifyIntegral
							span 元
							.rechargeMoney-field
								p(style='width:85px;') 充值金额：
								input#_input2(maxlength = "5")
						.clear
						.preview-field
							.preview-wrapper.parallel-container
								p.displayID
								span._txt1 微信昵称：
								p.WechatName
								span._txt2 电话号码：
								p.phoneNumber
								input._suppPhone
								span._txt3 会员编号：
								p.memberID
								span._txt4 目前积分：
								p.parent
					.btn-field
						.btn-wrapper
							.btn-container
								.cancel-btn.btn
									p 取消
								.confirm-btn.btn
									p 确定
								.clear