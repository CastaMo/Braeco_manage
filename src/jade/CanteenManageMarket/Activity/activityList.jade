#activity-header
  .activity-tabs
    .activity-tab.choose(ng-click='setSelectedTab($event, "sales")')
      span 促销活动
    .activity-tab(ng-click='setSelectedTab($event, "theme")')
      span 主题活动
#activity-list
  .activity-tabs-containers
    .container(ng-show='selectedTab == "sales"')
      .new-activity-button(ng-click='newActivityByType($event, "sales")')
        span 新建活动
      .activity-lists
        .activity-item(ng-repeat='activity in activities.sales' ng-click='selectOneActivity($event)')
          .activity-item-wrapper
            .activity-item-container
              .activity-title {{ activity.title }}
              img.activity-image(ng-src='{{ baseImageUrl + activity.pic }}')
              .activity-time {{ formatActivityTime(activity.date_begin, activity.date_end) }}
              .brief {{ activity.intro }}

    .container(ng-show='selectedTab == "theme"')
      .new-activity-button(ng-click='newActivityByType($event, "theme")')
        span 新建活动
      .activity-lists
        .activity-item(ng-repeat='activity in activities.themes' ng-click='selectOneActivity($event)')
          .activity-item-wrapper
            .activity-item-container
              .activity-title {{ activity.title }}
              img.activity-image(ng-src='{{ baseImageUrl + activity.pic }}')
              .activity-time {{ formatActivityTime(activity.date_begin, activity.date_end) }}
              .brief {{ activity.intro }}
