extends ../../layout

block mainHead
	p.title 餐厅信息

block head
	script(src="/manage/Extra/Basic/Data" type="text/javascript" async='async')
	meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
	title 餐厅信息_杯口点餐-最贴心的餐饮管家
	block css

'''这里是主体'''
block content
	.mycenter
		.myli
			.myhead 账号信息
			.infos
				.info_li
					.info_desc 账号
					.info_value 
					.blue#change_password 重置密码
			.info_li
				.info_desc 邮箱
				.info_value 
				.blue#change_email 修改
		.myli
			.myhead 门店信息
			.infos
			.info_li
				.info_desc 所属门店
				.info_value 
			.info_li
				.info_desc 地址
				.info_value 
				.blue#change_address 修改
			.info_li
				.info_desc 联系方式
				.info_value 
				.blue#change_phone 修改
			.info_li.big
				.blue#change_pics 上传图片
				.info_desc 门店图片
				.info_value.info_img
					img(src = '')
			.info_li.big
				.btns
					.blue#associate 关联打印机
					a.blue#export(href='/Download/Wxqrpay' target='_blank') 导出
				.info_desc 扫码支付
				.info_value.info_img.info_img1
					img(src = '')

	#wrap_contianer
		.wrap#wrap_password
			.wrap_head 
				span 修改密码
				.close_wrap
			.wrap_content
				.wrap_inputs			
					.wrap_input_li
						.wrap_desc 输入旧密码*
						.wrap_input
							input(type='password' name='oldpass' placeholder='6-16个字符')
					.wrap_input_li
						.wrap_desc 输入新密码*
						.wrap_input
							input(type='password' name='newpass' placeholder='6-16个字符')
					.wrap_input_li
						.wrap_desc 确认密码*
						.wrap_input
							input(type='password' name='confirmpass' placeholder='6-16个字符')
				.btns
					.btn.cancle 取消
					.btn.confirm 保存
		.wrap#wrap_email
			.wrap_head 
				span 修改邮箱地址
				.close_wrap
			.wrap_content
				.wrap_inputs			
					.wrap_input_li
						.wrap_desc 原邮箱地址
						.wrap_input
							span 
					.wrap_input_li
						.wrap_desc 新邮箱地址*
						.wrap_input
							input(type='email' empty_is_vlaid='true' name='email' placeholder='请输入邮箱地址')
				.btns
					.btn.cancle 取消
					.btn.confirm 保存
		.wrap#wrap_address
			.wrap_head 
				span 修改餐厅地址
				.close_wrap
			.wrap_content
				.wrap_inputs			
					.wrap_input_li
						.wrap_desc 原地址
						.wrap_input
							span 
					.wrap_input_li
						.wrap_desc 新地址
						.wrap_input
							input(type='text' name='address' length='128' placeholder='请输入地址')
				.btns
					.btn.cancle 取消
					.btn.confirm 保存
		.wrap#wrap_phone
			.wrap_head 
				span 修改联系方式
				.close_wrap
			.wrap_content
				.wrap_inputs			
					.wrap_input_li
						.wrap_desc 原联系方式
						.wrap_input
							span 
					.wrap_input_li
						.wrap_desc 新联系方式*
						.wrap_input
							input(type='text' name='contact_phone' length='32' placeholder='只能输入固定座机或者手机号码哦')
				.btns
					.btn.cancle 取消
					.btn.confirm 保存
		.wrap#wrap_pics
			.wrap_head 
				span 管理餐厅照片
				.close_wrap
			.wrap_content
				.wrap_pic
					.big_pic
						#carousel.carousel
							.carousel_imgs
							.carousel_dots
						span(style='float:right') 建议尺寸: 375像素*200像素
						span 最多上传5张图片
					.little_pics
						.little_pic_li
							iframe(name='res0' class='iframe')
							form.form(target = 'res0' enctype="multipart/form-data" action="http://upload.qiniu.com/" method="post")
								input(type='file' name='file')
								input(type='text' name='token')
								input(type='text' name='key')
							.little_pic
								img
								.delet_img
							.empty_pic
								.cross
								span 点击上传图片
						.little_pic_li
							iframe(name='res1' class='iframe')
							form.form(target = 'res1' enctype="multipart/form-data" action="http://upload.qiniu.com/" method="post")
								input(type='file' name='file')
								input(type='text' name='token')
								input(type='text' name='key')
							.little_pic
								img
								.delet_img
							.empty_pic
								.cross
								span 点击上传图片
						.little_pic_li
							iframe(name='res2' class='iframe')
							form.form(target = 'res2' enctype="multipart/form-data" action="http://upload.qiniu.com/" method="post")
								input(type='file' name='file')
								input(type='text' name='token')
								input(type='text' name='key')
							.little_pic
								img
								.delet_img
							.empty_pic
								.cross
								span 点击上传图片
						.little_pic_li
							iframe(name='res3' class='iframe')
							form.form(target = 'res3' enctype="multipart/form-data" action="http://upload.qiniu.com/" method="post")
								input(type='file' name='file')
								input(type='text' name='token')
								input(type='text' name='key')
							.little_pic
								img
								.delet_img
							.empty_pic
								.cross
								span 点击上传图片
						.little_pic_li
							iframe(name='res4' class='iframe')
							form.form(target = 'res4' enctype="multipart/form-data" action="http://upload.qiniu.com/" method="post")
								input(type='file' name='file')
								input(type='text' name='token')
								input(type='text' name='key')
							.little_pic
								img
								.delet_img
							.empty_pic
								.cross
								span 点击上传图片
				.btns
					.btn.cancle 取消
					.btn.confirm 保存
		.wrap#wrap_printers
			.wrap_head 
				span 关联打印机
				.close_wrap
			.wrap_content
				.wrap_inputs
					.wrap_input_li
						.wrap_desc 打印联数
						.wrap_input
							input(type='number' name='page' empty_is_vlaid='true' length='255' placeholder='置空，则默认为1')		
					.wrap_printers
				.btns
					.btn.cancle 取消
					.btn.confirm 保存
